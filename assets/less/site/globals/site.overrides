@formButtonColor: @sidebarBackgroundColor;
@sidebarBackgroundColor: @ivory; // #f9f9f9;

// General typography

button,
input,
optgroup,
select,
textarea {
  font-family: @fontName;
}

// Responsive classes

:not(.ui.grid).only {
  &.large.monitor:not(.computer) {
    @media all and (max-width: @largeMonitorBreakpoint) {
      display: none !important;
    }
  }

  &.widescreen:not(.large.monitor):not(.computer) {
    @media all and (max-width: @widescreenMonitorBreakpoint) {
      display: none !important;
    }
  }

  &.computer:not(.large.monitor):not(.large.screen):not(.tablet):not(.mobile) {
    @media all and (max-width: @computerBreakpoint) {
      display: none !important;
    }
    @media all and (min-width: @widescreenMonitorBreakpoint) {
      display: none !important;
    }
  }
}
.mobile.hidden {
  @media all and (max-width: @largestMobileScreen) {
    display: none !important;
  }
}

// FIXME: hidden for now

#skip-to-main {
  display: none;
}

// basic page structure

#main {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  .invenio-page-body {
    padding-bottom: 1rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }
}

// Flashed messages and banners
.ui.flashed.message {
  .ui.grid.centered {
    text-align: right;
    .ui.icon.button.close-btn {
      margin-top: 0;
    }
  }
}

// Cover page (login, register, etc.)

html.cover-page {
  background-color: @white;
}

// Header

@labelBottomMargin: 0.28571429rem;

.theme.header {
  box-shadow: none;
  .beta-banner {
    background-color: @seafoam;
    color: @verdigris;
    padding: 0.5rem 1rem;
    text-align: center;
    font-size: 16px;
    box-shadow: inset 0 -3px 3px rgba(9, 9, 9, 0.1);
    margin-left: 0 !important;
    margin-right: 0 !important;
    a {
      text-decoration: underline;
    }
  }
  .outer-navbar {
    border-color: transparent;
    background-color: transparent;

    #invenio-nav.ui.menu {
      @media screen and (max-width: @largestMobileScreen) {
        height: 3.5rem;
      }
      box-shadow: none;

      &.active {
        #invenio-menu.ui.menu {
          @media all and (max-width: @largestTabletScreen) {
            z-index: 1000;
          }
        }
      }
      .item:not(.logo) {
        & > span {
          padding-left: 1.5rem;
          padding-right: 1.5rem;
        }
        a {
          position: relative;
          color: #000;
          &::after {
            content: "";
            position: absolute;
            width: 100%;
            transform: scaleX(0);
            height: 2px;
            bottom: 1rem;
            left: 0;
            background-color: @primaryColor;
            transform-origin: bottom right;
            transition: transform 0.1s ease-out;
          }
          .inline {
            margin-left: 0.5rem;
          }
        }
        a:not(.ui.button):hover {
          color: #000;
          &::after {
            transform: scaleX(1);
            transform-origin: center;
          }
        }
        a.ui.button.basic {
          box-shadow: none;
        }
        &.right.menu {
          a,
          a:hover,
          .item > span {
            color: @primaryColor;
          }
          > form > a.ui.button.basic {
            color: @primaryColor !important;
            i {
              margin-right: 0.5rem !important;
            }
          }
        }
        #user-profile-dropdown {
          margin-right: 0.75rem;
        }
        #user-profile-menu {
          a {
            &::after {
              background-color: transparent;
            }
          }
        }
      }
      .item.logo {
        width: auto;
        .logo-link {
          display: flex;
          align-items: center;
          .rdm-logo {
            width: auto;
            max-height: 4rem;
            margin-top: 0.4rem;
            @media screen and (max-width: @largestMobileScreen) {
              max-height: 3rem;
            }
          }
          .title-wrapper {
            margin-left: 1rem;
            h1 {
              margin-top: 0.3rem;
              margin-bottom: 0;
              letter-spacing: 0.05rem;
              font-size: 3rem;
              line-height: 3rem;
              color: @primaryColor;
              @media screen and (max-width: @largestMobileScreen) {
                margin-top: 0.5rem;
                font-size: 2rem;
                line-height: 2rem;
              }
            }
            .subtitle {
              font-size: 1rem;
              font-weight: bold;
              text-transform: uppercase;
              display: block;
              margin-top: 0;
              line-height: 1rem;
              letter-spacing: 0.1rem;
              font-weight: normal;
              @media screen and (max-width: @largestMobileScreen) {
                font-size: 0.85rem;
              }
            }
          }
        }
      }
    }
  }
}

// Subheaders

.ui.container.page-subheader-outer {
  background-color: transparent !important;
}

// Front page hero area search bar

#frontpage-hero-section {
  background-color: #fff;
  background-image: linear-gradient(
      0deg,
      rgba(255, 255, 255, 1) 0%,
      rgba(255, 255, 255, 1) 12%,
      rgba(255, 255, 255, 0.9) 47%,
      rgba(255, 255, 255, 0.9) 93%,
      rgba(255, 255, 255, 1) 98%
    ),
    url("https://localhost/static/images/pattern/KCommons_assets_pattern large.png");
  background-position: center;
  background-position-y: 55%;
  background-size: cover;
  h2 {
    letter-spacing: 0.05rem;
  }
  > .ui.container.grid {
    margin-top: 0;
    .titles {
      margin-top: 2rem;
      h1 {
        font-size: 8rem;
        line-height: 8rem;
        font-weight: bold;
        color: @ivy;
        opacity: 1;
        letter-spacing: 0.05rem;
        margin-bottom: 0;
        margin-top: 1rem;
      }
      a {
        text-decoration: none;
        h2 {
          position: relative;
          z-index: 99;
          text-transform: uppercase;
          font-weight: normal;
          letter-spacing: 0.1rem;
          margin-top: -0.5rem;
          font-size: 2rem;
        }
      }
    }
  }

  #frontpage-search-bar {
    @media screen and (max-width: 991px) {
      text-align: center;
      .column:last-child {
        margin-top: 1rem;
      }
    }
  }

  #frontpage-info-bar {
    a {
      color: @verdigris;
      text-decoration: none;
      opacity: 0.7;
      @media all and (max-width: @largestTabletScreen) {
        h2 {
          font-size: 1.5rem;
        }
      }
      .huge.icon {
        font-size: 3rem;
      }
      &:hover {
        opacity: 1;
      }
    }
  }
}

// Carousel

#communities-carousel {
  .ui.container.grid {
    max-width: 100% !important;
    .column {
      padding-bottom: 0;
    }
    .item {
      .content {
        .browse-btn {
          background-color: @white !important;
          border: 1px solid #ddd;
        }
      }
    }
    &:nth-child(2) {
      margin-top: 0;
    }
  }
  i.icon.angle.left.carousel-arrow,
  i.icon.angle.right.carousel-arrow {
    color: @primaryColor;
    opacity: 0.5;
    &:hover {
      opacity: 1;
    }
  }
}

// Search results

.ui.container.fluid.page-subheader-outer.compact.ml-0-mobile.mr-0-mobile {
  margin-bottom: 0;
}
#header-search-bar {
  .search.right-angle-search-content {
    width: 100% !important;
  }
}
.search-bar {
  // margin-top: 1rem !important;
  > .two.column.row {
    .column:nth-child(2) {
      padding: 0 1rem;
    }
  }
  .result-options.rel-mt-2 {
    margin-top: 1rem !important;
  }
}

// Forms
.ui.icon.button.close-btn {
  margin-top: 1.75rem;
  float: right;
}
// outside #rdm-deposit-form to include modal forms
.ui.form,
.ui.modal {
  .required.field > .checkbox:after,
  .required.field > label:after,
  .required.fields.grouped > label:after,
  .required.fields:not(.grouped) > .field > .checkbox:after,
  .required.fields:not(.grouped) > .field > label:after {
    color: @primaryColor !important;
    content: "(required)" !important;
    margin: 0 0 0 0.5em !important;
    font-weight: normal !important;
  }

  .helptext,
  .field label.helptext {
    color: @primaryColor !important;
  }

  .ui.label.prompt {
    font-size: 1rem;
  }

  input,
  button,
  select {
    scroll-margin-bottom: 100px;
  }
  textarea {
    scroll-margin-bottom: 300px;
  }

  .ui.radio.checkbox,
  .ui.checkbox {
    padding: 0.5rem 1rem;
    border: 2px solid transparent;
    &:focus-within {
      border: 2px solid @secondaryColor;
      border-radius: @defaultBorderRadius;
      input:checked ~ label {
        &:before {
          border: 1px solid @secondaryColor;
        }
      }
    }
  }

  .ui.button {
    font-weight: normal;
    &.add-btn,
    &.add-id-button,
    &.add-url-button,
    &.add-button {
      background-color: transparent;
      box-shadow: none;
      color: @secondaryColor;
      &.labeled.icon {
        padding-left: 2.5rem !important;
      }
      .add.icon {
        background-color: transparent;
      }
    }
  }
  .ui.mini.ui.button {
    font-size: 1em;
  }

  h2 {
    font-weight: normal;
  }

  &.deposit-creatibutor-modal .ui.divider {
    margin: 1.5rem 0;
  }
}

#deposit-form {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  .ui.form {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    #rdm-deposit-form {
      max-width: 900px !important;
      flex-grow: 1;
      display: flex;
      flex-direction: column;
      // margin-top: 0 !important;
      // >.ui.grid.mt-25 {
      //   margin-top: 0 !important;
      //   padding-top: 25px;
      // }
      > .ui.grid {
        flex-grow: 1;
        > .column {
          padding-bottom: 0;
          display: flex;
          flex-direction: column;
          > .visible.transition {
            flex-grow: 1;
          }
        }
      }
    }
    .deposit-form-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
      h2 {
        font-weight: bold;
        font-family: @headingFontName;
        margin-bottom: 0;
      }
      h3 {
        color: @secondaryColor;
      }
    }

    a {
      text-decoration: underline;
      text-decoration-style: dotted;
    }

    // .fields {
    //   margin-bottom: 0.5rem;
    // }

    .field {
      // margin-bottom: 0.5rem;
      &.error {
        label {
          color: @errorColor;
        }
        input[type="text"] {
          &::before {
            content: "\f071";
            margin-right: 0.5em;
            font-family: Icons;
          }
        }
        .prompt.label {
          background-color: @errorColor !important;
          border-color: @errorColor !important;
          color: #fff !important;
        }
      }
    }

    .upload-form-pager {
      margin-bottom: 2rem;
      .upload-form-stepper-step {
        line-height: 1.15rem;
        padding-top: @small;
        padding-bottom: @small;
        background-color: @sidebarBackgroundColor;
        .title {
          font-weight: normal;
        }
        &:after {
          background-color: @sidebarBackgroundColor;
        }
        &.active {
          background-color: @primaryColor;
          color: #fff;
          .title {
            color: #fff;
          }
          &::after {
            color: #fff;
            background-color: @primaryColor;
          }
        }
        &.has-error {
          color: @errorColor; // was @errorTextColor
          background-color: @negativeBackgroundColor;
          border: 1px solid #e0b4b4;
          .title {
            color: @errorColor;
          }
          &.active {
            color: @errorColor;
            background-color: @errorColor;
            border: 1px solid #e0b4b4;
            .title {
              color: @errorBackgroundColor;
            }
            &::after {
              color: @negativeBackgroundColor;
              background-color: @errorColor;
              border-color: #e0b4b4;
            }
          }
          &:after {
            background-color: @negativeBackgroundColor;
            border-color: #e0b4b4;
          }
          &:before {
            content: "\f06a";
            font-family: Icons;
            font-size: @huge;
            position: absolute;
            bottom: -1.5rem;
          }
        }
      }
    }

    .sticky-footer-fixed,
    .sticky-footer-static {
      background-color: rgba(0, 0, 0, 0.7);
      backdrop-filter: blur(2px);
      border-top: 2px solid @white;
      padding: 0;
      display: flex;
      justify-content: space-between;
      min-height: 3.5rem;
      border-radius: @defaultBorderRadius @defaultBorderRadius 0 0;
      .grid.deposit-form-footer {
        width: 100%;
        margin: 0;
        .column {
          padding: 0.5rem;
          &:last-child {
            text-align: right;
          }
        }
        .footer-message {
          font-size: @small;
          color: @ivory;
          text-align: center;
          padding-left: 0;
          padding-right: 0;
        }
      }

      .ui.button {
        margin: 0;
        // &.primary {
        // }
      }
    }
    .sticky-footer-fixed {
      position: fixed;
      bottom: 0;
      max-width: 900px !important;
      background-color: rgba(0, 0, 0, 0.8);
    }
    .sticky-footer-static {
      position: relative;
      padding-bottom: 1rem;
      min-height: 4.5rem;
      border-bottom: 1px solid grey;
    }

    .formPageWrapper {
      padding-bottom: 2rem;
      .inline.fields {
        .field.invenio-select-field > .selection.dropdown {
          width: 100%;
        }
      }

      .ui.segment {
        box-shadow: none;
        border-color: transparent;
        background-color: transparent;
      }

      .submit-actions {
        > .row:last-child {
          .save-submit-buttons {
            background-color: transparent;
            border: 0;
            .row {
              padding-bottom: 0;
            }
            .column:last-child {
              padding-top: 0;
            }
            .mb-10 {
              margin-bottom: 0;
            }
            #deposit-form-publish-button {
              line-height: 2rem;
              font-size: 1rem;
            }
            button {
              line-height: 1.25rem;
              margin-bottom: 0.5rem;
            }
            .helptext p {
              font-size: 1rem;
            }
          }

          .submit-buttons-description {
            margin-top: 0;
            margin-bottom: 0;
            p {
              display: block;
              margin-bottom: 0.5em;
              font-size: 1em;
            }
          }
        }
      }

      fieldset.ui.segment {
        .field:last-child,
        .fields:last-child,
        .field:last-child .fields:last-child,
        .fields:last-child .field {
          margin-bottom: 0;
        }

        .ui.container {
          width: 100%;
        }

        > .invenio-field-label:first-of-type,
        > .field > .invenio-field-label:first-of-type,
        > .field > .field > .invenio-field-label:first-of-type,
        > .field > label > .invenio-field-label:first-of-type,
        > .fields
          > .field.subjects-field-inner
          > .invenio-field-label:first-of-type {
          font-size: @big;
          margin-bottom: 0.5rem;
          font-weight: bold;
          display: block;
          .icon {
            display: inline-block;
            margin-right: 0.5rem;
          }
          font-family: @headingFontName;
        }
        .field > label {
          margin-bottom: 0.25em;
          .icon {
            display: none;
          }
        }

        .helptext {
          font-size: 1em;
          margin-bottom: 0.5rem;
          margin-top: 0;
        }
        .add-btn {
          margin: -0.5em 0.5em 0 0;
          font-weight: normal;
        }

        &.content_warning {
          .fields .invenio-field-label {
            font-weight: normal;
          }
        }

        &.subjects_keywords {
          > .fields {
            margin-bottom: 3rem;
            // .subjects-field-inner .fields {
            //   label {
            //     margin-top: -1.5rem;
            //   }
            // }
          }
          .helptext {
            margin-bottom: 0;
            font-weight: 0;
          }
        }

        &.rights-field {
          .list {
            .item:last-of-type {
              margin-bottom: 1em;
            }
          }
        }

        &.access {
          .message {
            margin-top: 2em;
          }

          // .embargo-access {
          //   label.helptext {
          //     margin-bottom: 1em;
          //   }
          // }
          // .disabled {
          //   color: rgba(0,0,0) !important;
          // }
        }

        &.invenio-fieldset.doi {
          > .field:first-of-type {
            margin-bottom: 0;
          }
          .inline.fields {
            margin-bottom: @labelBottomMargin;
            label {
              font-weight: normal;
            }
          }
          label.helptext {
            margin-top: -0.5em;
          }
        }

        &.invenio-fieldset.resource_type {
          > .field {
            margin-bottom: 0;
            &.error {
              .item {
                color: @errorColor;
              }
            }
          }
          .ui.menu.compact {
            border: 0;
            box-shadow: none;
            background: transparent;
            .item {
              min-width: 0;
              flex-direction: column;
              &:last-child,
              &:first-child {
                border-radius: @defaultBorderRadius;
              }
              &.active {
                border-radius: @defaultBorderRadius;
                border-color: @primaryColor;
                margin: 0;
              }
            }
          }
        }

        &.invenio-fieldset.combined_dates {
          .ui.label.prompt {
            margin-top: 0;
            margin-bottom: 1rem;
          }
          label.helptext {
            margin-top: 1.5em;
          }
          .checkbox {
            margin-top: 2rem;
          }
        }

        &.invenio-fieldset.abstract {
          .additional-description-wrapper {
            border: 1px solid @borderColor;
            border-radius: @defaultBorderRadius;
            padding: 1rem 1rem;
            margin-bottom: 1rem;
          }
        }

        &.creators {
          .field {
            .fields:last-child {
              margin-bottom: 1rem;
            }
            .ui.list {
              margin-top: 1rem;
              .item {
                .drag-anchor {
                  line-height: 2.35rem;
                  padding-left: 0.25rem;
                }
                .creatibutor {
                  line-height: 2.35rem;
                  .ui.label {
                    margin-left: 1rem;
                    position: relative;
                    top: -1px;
                  }
                }
              }
            }

            h2.ui.header {
              background: @sidebarBackgroundColor;
              font-size: @large;
              padding: 1rem 1rem 0.5rem 1.75rem;
              margin-bottom: 0;
              margin-top: 0;
            }
            .ui.form {
              margin-top: 0.5rem;
              padding: 1rem 1rem 1rem 1.75rem;
              width: 100%;
              background-color: @sidebarBackgroundColor;
              label {
                font-weight: bold;
                margin-bottom: 0.25rem;
                display: block;
                font-size: @small;
              }
              > .fields:first-child {
                margin: 0;
              }
              .ui.divider {
                margin-top: 0.5rem;
                margin-bottom: 1rem;
              }
              .creatibutors-identifiers-item-row {
                &:last-of-type {
                  margin-bottom: 0;
                }
                .field:first-child {
                  label {
                    display: none;
                  }
                  .field {
                    width: 100%;
                  }
                }
                .pointing.above.prompt {
                  margin-top: 1rem;
                  margin-left: 0;
                  &::before {
                    top: 0;
                    left: 50%;
                  }
                }
              }
              .creatibutors-identifiers-add-button {
                margin-top: 0;
                margin-bottom: 0.5rem;
              }
            }
            .creatibutors-item-form-buttons {
              padding: 0.25rem 1rem 1rem 1.75rem;
              background-color: @sidebarBackgroundColor;
            }
            &.error h2.ui.header {
              border: 1px solid @errorColor;
              border-bottom: 0;
            }
            &.error .creatibutors-item-form-buttons {
              border: 1px solid @errorColor;
              border-top: 0;
            }
            &.error .ui.form {
              border-left: 1px solid @errorColor;
              border-right: 1px solid @errorColor;
              .field:not(.error) {
                label,
                .ui.dropdown,
                input[type="text"] {
                  color: @textColor;
                  .text,
                  .item {
                    color: @textColor;
                    background-color: @inputBackground;
                  }
                  .item.selected {
                    background-color: @sidebarBackgroundColor !important;
                  }
                  &::placeholder,
                  .default.text {
                    color: @mutedTextColor;
                    opacity: 0.5;
                  }
                }

                .checkbox:not(.toggle):not(.slider) label:before,
                .ui.dropdown,
                input[type="text"] {
                  background-color: @inputBackground;
                  border-color: @borderColor !important;
                }

                .ui.multiple.selection.dropdown {
                  .ui.label {
                    color: @textColor;
                    border-color: @borderColor !important;
                    background-color: @sidebarBackgroundColor; // #e8e8e8
                  }
                  .selected.item {
                    background-color: @sidebarBackgroundColor;
                    span {
                      background-color: transparent;
                    }
                  }
                }
              }
            }
          }
        }

        &.ai {
          .fields .field .invenio-field-label {
            font-weight: normal;
          }
        }

        &.related_works {
          .additional-identifiers-item-row {
            margin-bottom: 1rem;
            border: 1px solid @borderColor;
            border-radius: @defaultBorderRadius;
            padding: 1rem 1rem;
          }
        }

        &.file_upload {
          .file-upload-area {
            border: 1px solid @borderColor;
