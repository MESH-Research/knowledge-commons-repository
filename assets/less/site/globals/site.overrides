        .ui.basic.button {
          background-color: @sidebarBackgroundColor !important;
          padding-left: 1rem !important;
          font-weight: bold;
          color: @textColor !important;
        }
        .menu button {
          width: 100%;
          background-color: transparent;
        }
      }
      &#social-sharing {
        .mastodon-popup {
          width: 2.75rem;
          height: 0.25rem;
          display: inline-block;
          position: absolute;
          background-color: transparent;
        }
