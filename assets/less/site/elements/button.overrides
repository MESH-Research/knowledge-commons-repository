.ui.buttons .button.primary:not(.basic):not(.inverted),
.ui.primary.button {
  background-color: @primaryColor;
  color: @white;
  box-shadow: 0px 0px 0px 1px @primaryColor inset,
    0px 0em 0px 0px rgba(0, 0, 0, 0.15) inset;
  &:hover,
  &:active,
  &:focus {
    background-color: darken(@primaryColor, 10%);
    color: @white;
    box-shadow: 0px 0px 0px 1px darken(@primaryColor, 10%) inset,
      0px 0em 0px 0px rgba(0, 0, 0, 0.15) inset;
  }
  &.labeled.icon > .icon {
    background-color: transparent;
  }
}

.invenio-fieldset.resource_type {
    .menu .button.item {
        color: @darkGold;
        box-shadow: none;
    }
}


.sidebar-container > .button.ui.fluid.labeled.icon:not(.primary) {
  background-color: @sidebarBackgroundColor !important;
  padding-left: 1rem !important;
  font-weight: bold;
  text-align: left;
  color: @sidebarHeaderColor !important;
  border: 1px solid @borderColor;
  box-shadow: none;
}

#record-export {
  .ui.basic.button {
    background-color: @sidebarBackgroundColor !important;
    padding-left: 1rem !important;
    font-weight: bold;
    color: @sidebarHeaderColor !important;
    box-shadow: 0px 0px 0px 1px @borderColor inset, 0px 0em 0px 0px @borderColor inset;
  }
  .menu button {
    width: 100%;
    background-color: transparent;
  }
}