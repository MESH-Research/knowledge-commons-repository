.ui.buttons > .ui.button:not(.basic):not(.inverted),
.ui.buttons:not(.basic):not(.inverted) > .ui.button,
.ui.button {
  background-color: @white;
  color: @darkGold;
  box-shadow: 0px 0px 0px 1px @gold50 inset, 0px 0em 0px 0px @goldRgba10 inset;
  &:hover,
  &:active,
  &:focus {
    background-color: @ivory;
    color: @ivy80;
    box-shadow: 0px 0px 0px 1px @verdigris60 inset,
      0px 0em 0px 0px @verdigris10 inset;
    cursor: pointer;
  }
  &.search {
    background-color: @secondaryColor;
    &:hover,
    &:active,
    &:focus {
      background-color: darken(@secondaryColor, 10%);
      border-color: darken(@secondaryColor, 10%);
      box-shadow: 0px 0px 0px 1px darken(@secondaryColor, 10%) inset,
        0px 0em 0px 0px rgba(28, 64, 54, 0.15) inset;
    }
  }
  &.transparent {
    background-color: transparent;
    box-shadow: none;
  }

  &.labeled.icon > .icon {
    background-color: transparent;
  }

  &.icon {
    .close-btn {
      margin-top: 1.75rem;
      float: right;
    }
  }
}

.ui.buttons > .ui.button.basic:not(.inverted),
.ui.buttons.basic:not(.inverted) > .ui.button,
.ui.button.basic {
  background-color: @white;
  color: @darkGold;
  box-shadow: 0px 0px 0px 1px @gold50 inset, 0px 0em 0px 0px @goldRgba10 inset;
  &:hover,
  &:active,
  &:focus {
    background-color: @ivory;
    color: @ivy80;
    box-shadow: 0px 0px 0px 1px @verdigris60 inset,
      0px 0em 0px 0px @verdigris10 inset;
    cursor: pointer;
  }
}

